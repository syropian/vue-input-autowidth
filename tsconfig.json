{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["node", "vite/client", "cypress"]
  },
  "include": [
    "vite.config.ts",
    "env.d.ts",
    "lib/**/*.ts",
    "demo/**/*.ts",
    "demo/**/*.vue",
    "sandbox/**/*.ts",
    "sandbox/**/*.vue",
    "tests/**/*.ts"
  ]
}
